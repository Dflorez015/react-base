{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@components/*": [
        "./src/ui/components/*"
      ],
      "@assets/*": [
        "./src/ui/assets/*"
      ],
      "@composables/*": [
        "./src/ui/composables/*"
      ],
      "@features/*": [
        "./src/ui/features/*"
      ],
      "@hooks/*": [
        "./src/ui/hooks/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@context/*": [
        "./src/utils/context/*"
      ],
      "@api/*": [
        "./src/domain/api/*"
      ],
      "@graphql/*": [
        "./src/domain/graphql/*"
      ],
      "@store/*": [
        "./src/domain/store/*"
      ],
      "@routes/*": [
        "./src/routes/*"
      ],
      // "@routeTree/*": [
      //   "./src/routeTree.gen.ts"
      // ],
      "@src/*": [
        "./src/*"
      ],
    },
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}